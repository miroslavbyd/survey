@using ankiety.Models
@model HeaderModel
@using (Html.BeginForm("Add", "Header", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()    
    <div class="form-horizontal" style="border: 2px  solid green; padding:2px; margin:2px">
        <h4>Add Header</h4>
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Style, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Style)
                @Html.ValidationMessageFor(model => model.Style)
            </div>
        </div>
        @Html.HiddenFor(model => model.SurveyId)
        @*Batton*@        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Add Header</button>
            </div>
        </div>
    </div>
}