@using ankiety.Models
@model ContainerModel
@using (Html.BeginForm("Add", "Container", FormMethod.Post))
{
    <div class="form-horizontal" style="border: 2px  solid red; padding:2px; margin:2px">
        <h4>Add Container</h4>
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        @Html.HiddenFor(model => model.SurveyId)
        @*Batton*@        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Add Container</button>
            </div>
        </div>
    </div>
}